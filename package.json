{
  "name": "code-terminal-kernel",
  "publisher": "leoustc",
  "author": "leoustc",
  "displayName": "Terminal Kernel",
  "description": "Create, reuse, and manage persistent terminals from VS Code.",
  "icon": "media/terminal.png",
  "version": "0.2.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/leoustc/code-terminal-kernel.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "categories": [
    "Other"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "persistentTerminals",
          "title": "Terminal Kernel",
          "icon": "media/terminal.svg"
        }
      ]
    },
    "views": {
      "persistentTerminals": [
        {
          "id": "terminalKernelSessions",
          "name": "Terminal Kernel"
        }
      ]
    },
    "commands": [
      {
        "command": "terminalKernel.newSession",
        "title": "New"
      },
      {
        "command": "terminalKernel.launchTool",
        "title": "Run Tool"
      },
      {
        "command": "terminalKernel.connectSession",
        "title": "Connect to Terminal"
      },
      {
        "command": "terminalKernel.deleteSession",
        "title": "Delete"
      },
      {
        "command": "terminalKernel.refresh",
        "title": "Refresh"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "terminalKernel.newSession",
          "when": "view == terminalKernelSessions",
          "group": "navigation"
        },
        {
          "command": "terminalKernel.refresh",
          "when": "view == terminalKernelSessions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "terminalKernel.connectSession",
          "when": "view == terminalKernelSessions && viewItem == terminalSession",
          "group": "context@1"
        },
        {
          "command": "terminalKernel.deleteSession",
          "when": "view == terminalKernelSessions && viewItem == terminalSession",
          "group": "inline@3",
          "icon": "$(close)"
        }
      ]
    },
    "configuration": {
      "title": "Terminal Kernel",
      "properties": {
        "terminalKernel.backend": {
          "type": "string",
          "default": "tmux",
          "enum": [
            "tmux",
            "screen"
          ],
          "description": "Backend used for terminal sessions."
        },
        "terminalKernel.shell": {
          "type": "string",
          "default": "bash",
          "enum": [
            "bash",
            "sh"
          ],
          "description": "Shell used to launch terminal sessions."
        },
        "terminalKernel.preloadEnvFile": {
          "type": "string",
          "default": "",
          "description": "Path to a shell file to source when starting a new session."
        },
        "terminalKernel.tools": {
          "type": "array",
          "default": [
            "codex"
          ],
          "items": {
            "type": "string"
          },
          "description": "List of tool commands shown in the Tools view. Edit in Settings."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npx tsc -p ./",
    "compile": "npx tsc -p ./",
    "watch": "npx tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3",
    "vsce": "^1.97.0"
  }
}
